# ============================================================================
# SYNTHORA - Minimum Environment Variables for Railway
# ============================================================================
# For Railway: Add these in the Variables tab of each service
# ============================================================================

# =============================================================================
# REQUIRED - App will not start without these
# =============================================================================

# App Configuration
APP_NAME=Synthora
APP_ENV=production
DEBUG=false
SECRET_KEY=change-this-to-a-random-32-character-string

# Database (Railway provides DATABASE_URL automatically with PostgreSQL addon)

# =============================================================================
# RECOMMENDED - Features will be limited without these
# =============================================================================

# Firebase Authentication
# Get from: Firebase Console > Project Settings
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_WEB_API_KEY=your-firebase-web-api-key
# For backend auth verification (paste entire JSON):
FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Redis for background jobs
# Get from: Upstash Console > Redis > REST URL
REDIS_URL=redis://default:password@endpoint.upstash.io:6379

# Encryption key for storing API keys
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-here

# =============================================================================
# OPTIONAL - Add when ready to enable features
# =============================================================================

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_MONTHLY_PRICE_ID=price_xxx
STRIPE_ANNUAL_PRICE_ID=price_xxx

# Google Cloud Storage (for video storage)
GCS_BUCKET_NAME=your-bucket
GCS_PROJECT_ID=your-project
GCS_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Social Media OAuth (for posting features)
YOUTUBE_CLIENT_ID=xxx
YOUTUBE_CLIENT_SECRET=xxx
TIKTOK_CLIENT_KEY=xxx
TIKTOK_CLIENT_SECRET=xxx
META_APP_ID=xxx
META_APP_SECRET=xxx

# URLs (Railway provides these automatically, update after deployment)
BACKEND_URL=https://your-backend.up.railway.app
FRONTEND_URL=https://your-frontend.up.railway.app
CORS_ORIGINS=https://your-frontend.up.railway.app

# =============================================================================
# FRONTEND VARIABLES (for frontend service only)
# =============================================================================
VITE_API_URL=https://your-backend.up.railway.app
VITE_FIREBASE_API_KEY=your-firebase-web-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
